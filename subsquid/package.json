{
  "name": "composable-squid",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "rm -rf lib && tsc",
    "init": "node db/init.js",
    "db:migrate": "npx sqd db migrate",
    "schema:reset": "",
    "processor:migrate": "echo skip",
    "processor:start": "node lib/processor.js",
    "processor:docker-run": "bash scripts/docker-run.sh",
    "query-node:start": "squid-graphql-server",
    "lint": "npm run lint:prod -- --fix",
    "lint:prod": "eslint . --ext .ts --ignore-path .gitignore --max-warnings 0",
    "test": "tsc -p tsconfig-test.json && ts-mocha --paths -p tsconfig-test.json"
  },
  "dependencies": {
    "@subsquid/archive-registry": "^0.0.6",
    "@subsquid/cli": "^0.3.0",
    "@subsquid/graphql-server": "^0.2.0",
    "@subsquid/ss58": "^0.1.0",
    "@subsquid/substrate-processor": "^0.7.1",
    "big.js": "^6.1.1",
    "dotenv": "^16.0.0",
    "pg": "^8.7.3",
    "typeorm": "^0.2.41",
    "ts-mockito": "^2.6.1"
  },
  "devDependencies": {
    "@subsquid/substrate-metadata-explorer": "^0.0.8",
    "@subsquid/substrate-typegen": "^0.4.2",
    "@types/big.js": "^6.1.3",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.27",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "assert": "^2.0.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-bn": "^0.3.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-type-graphql": "^0.3.2",
    "minimist": "^1.2.6",
    "mocha": "^9.2.2",
    "mocha-prepare": "^0.1.0",
    "ts-mocha": "^9.0.2",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.0",
    "typescript": "^4.6.2"
  }
}
