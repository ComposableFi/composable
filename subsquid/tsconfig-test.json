{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths":{
      "@composable/*": [
        "./src/*"
      ],
      "@composabletests/*": [
        "./test/*"
      ]
    }
  },
  "include": [
    "src",
    "src/**/*.ts",
    "test",
    "test/**/*.ts",
    "@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.d.ts",
    "src/**/*.d.ts"
  ]
}
