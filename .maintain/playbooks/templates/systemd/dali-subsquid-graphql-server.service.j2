[Unit]
Description=Subsquid Graphql Server
Documentation=https://github.com/ComposableFi/composable/blob/main/subsquid/README.md
After=network.target

[Service]
ExecStart=npx squid-graphql-server

WorkingDirectory={{ work_dir }}/subsquid
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=subsquid-graphql-server
User={{ user }}
Group={{ group }}
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
