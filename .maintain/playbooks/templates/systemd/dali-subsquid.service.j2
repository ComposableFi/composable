[Unit]
Description=Subsquid infra
Requires=docker.service
After=docker.service

[Service]
Restart=always

# Remove old containers
ExecStartPre=/usr/bin/docker-compose -f {{ work_dir }}/docker-compose.yml down -v
ExecStartPre=/usr/bin/docker-compose -f {{ work_dir }}/docker-compose.yml rm -v

# Compose up
ExecStart=/usr/bin/docker-compose -f {{ work_dir }}/docker-compose.yml up

# Compose down, remove containers and volumes
ExecStop=/usr/bin/docker-compose -f {{ work_dir }}/docker-compose.yml down -v

[Install]
WantedBy=multi-user.target
