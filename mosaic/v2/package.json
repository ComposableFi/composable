{
  "version": "2.0.0",
  "name": "mosaic",
  "repository": "git@github.com:ComposableFi/CrosslayerPortal.git",
  "license": "MIT",
  "scripts": {
    "bootstrap": "rm -rf ./node_modules && yarn install --no-lockfile",
    "clean": "rm -rf ./cache && rm -rf ./artifacts && rm -rf ./.openzeppelin",
    "compile": "yarn clean && NODE_ENV=compile hardhat compile --quiet && yarn solhint",
    "frontend": "yarn hardhat export --export frontendAPI.JSON --network",
    "test": "yarn clean && NODE_ENV=mainnet hardhat test",
    "contracts_size": "yarn compile && NODE_ENV=hardhat hardhat size-contracts",
    "@comment deploy": "Deploy scripts",
    "deploy:mosaic_vault": "hardhat deploy --tags MosaicVault_deploy --network",
    "deploy:nft_summoner": "hardhat deploy --tags NFTSummoner --network",
    "deploy:token": "hardhat deploy --tags SampleToken --network",
    "deploy:nft": "hardhat deploy --tags SampleNft --network",
    "deploy:polygon_fundkeeper": "hardhat deploy --tags FundKeeper_deploy --network",
    "deploy:mosaic_holding": "hardhat deploy --tags MosaicHolding_deploy --network",
    "deploy:CompoundInvestmentStrategy": "hardhat deploy --tags CompoundInvestmentStrategy --network",
    "deploy:AaveInvestmentStrategy": "hardhat deploy --tags AaveInvestmentStrategy_deploy --network",
    "deploy:MosaicVaultConfig": "hardhat deploy --tags MosaicVaultConfig_deploy --network",
    "deploy:BalancerV1Wrapper": "hardhat deploy --tags BalancerV1Wrapper_deploy --network",
    "deploy:CurveWrapper": "hardhat deploy --tags CurveWrapper_deploy --network",
    "deploy:SushiSwapWrapper": "hardhat deploy --tags SushiSwapWrapper_deploy --network",
    "deploy:SushiswapLiquidityProvider": "hardhat deploy --tags SushiswapLiquidityProvider_deploy --network",
    "deploy:SynapseWrapper": "hardhat deploy --tags SynapseWrapper_deploy --network",
    "deploy:UniSwapV2Wrapper": "hardhat deploy --tags UniswapV2Wrapper_deploy --network",
    "deploy:UniswapV3Wrapper": "hardhat deploy --tags UniswapV3Wrapper_deploy --network",
    "deploy:MsgReceiverFactory": "hardhat deploy --tags MsgReceiverFactory_Deploy --network",
    "deploy:MsgSender": "hardhat deploy --tags MsgSender_Deploy --network",
    "deploy:TokenFactory": "hardhat deploy --tags TokenFactory_Deploy --network",
    "deploy:MosaicNativeSwapperETH:UniswapV2": "hardhat deploy --tags MosaicNativeSwapperETHUniswapV2_deploy --network",
    "deploy:MosaicNativeSwapperETH:Sushiswap": "hardhat deploy --tags MosaicNativeSwapperETHSushiswap_deploy --network",
    "deploy:MosaicNativeSwapperETH:Spiritswap": "hardhat deploy --tags MosaicNativeSwapperETHSpiritswap_deploy --network",
    "deploy:MosaicNativeSwapperETH:Spookyswap": "hardhat deploy --tags MosaicNativeSwapperETHSpookyswap_deploy --network",
    "deploy:MosaicNativeSwapperAVAX:Pangolin": "hardhat deploy --tags MosaicNativeSwapperAVAXPangolin_deploy --network",
    "deploy:MosaicNativeSwapperAVAX:TraderJoe": "hardhat deploy --tags MosaicNativeSwapperAVAXTraderJoe_deploy --network",
    "@comment verify contracts": "Verify contracts for different explorers",
    "verify_contract": "hardhat verify --network",
    "sourcify:verify": "hardhat sourcify --network",
    "@formatters": "Formatters and code hints",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "solhint": "solhint contracts/**/*.sol --fix",
    "prepare": "husky install",
    "merge_contracts": "sol-merger --export-plugin SPDXLicenseRemovePlugin \"./contracts/**/*.sol\" ./contracts-merged && node ./fixMergedContractsLicense.js"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "latest",
    "@nomiclabs/hardhat-etherscan": "latest",
    "@openzeppelin/contracts": "latest",
    "@openzeppelin/contracts-upgradeable": "latest",
    "@openzeppelin/hardhat-upgrades": "latest",
    "chai": "latest",
    "dotenv": "latest",
    "ethereum-waffle": "latest",
    "ethereumjs-util": "latest",
    "ethers": "latest",
    "hardhat": "latest",
    "hardhat-change-network": "latest",
    "hardhat-contract-sizer": "latest",
    "hardhat-dependency-compiler": "latest",
    "hardhat-deploy": "latest",
    "hardhat-deploy-ethers": "latest",
    "merkletreejs": "latest",
    "sol-merger": "latest"
  },
  "devDependencies": {
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "latest",
    "lint-staged": "latest",
    "prettier": "latest",
    "prettier-plugin-solidity": "latest",
    "solhint": "latest",
    "solhint-plugin-prettier": "latest",
    "yarn-upgrade-all": "^0.6.1"
  },
  "lint-staged": {
    "*.{js,json,sol,md}": "yarn prettier:fix",
    "*.sol": "yarn solhint"
  }
}
