{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "initialization/*": ["src/*"],
            "@polkadot/api/augment": ["src/interfaces/augment-api.ts"],
            "@polkadot/types/augment": ["src/interfaces/augment-types.ts"],
        },
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "build/**/*",
        "node_modules"
    ]
}
