{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./"
  },
  "files": ["src/index.ts", "src/config.json"],
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "types": ["node"],
      "rootDir": "..",
      "traceResolution": true
    }
  },
  "references": [
    {
      "path": "../types/tsconfig.json"
    },
    {
      "path": "../utils/tsconfig.json"
    }
  ]
}
