{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@composable/oracle_setup/*": ["./src/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["./src/config.json"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "types": ["node"],
      "traceResolution": true
    }
  }
}
