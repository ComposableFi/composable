{
  "name": "@composable/types",
  "private": false,
  "version": "0.1.0",
  "license": "Public Domain",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "gen": "npm run gen:defs && npm run gen:meta",
    "gen:defs": "ts-node --skip-project ../../node_modules/.bin/polkadot-types-from-defs --package @composable/types --input ./src",
    "gen:meta": "ts-node --skip-project ../../node_modules/.bin/polkadot-types-from-chain --package @composable/types --endpoint ws://127.0.0.1:9988 --output ./src"
  },
  "devDependencies": {
    "@polkadot/ts": "^0.4.22",
    "@polkadot/api": "^9.10.1",
    "@polkadot/typegen": "^9.10.1",
    "@polkadot/types": "^9.10.1",
    "@polkadot/types-augment": "^9.10.1",
    "@polkadot/types-codec": "^9.10.1",
    "@polkadot/types-create": "^9.10.1",
    "@polkadot/types-known": "^9.10.1",
    "@polkadot/types-support": "^9.10.1",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
}
