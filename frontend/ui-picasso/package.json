{
  "name": "ui-picasso",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:ComposableFi/ui-picasso.git",
  "license": "UNLICENSED",
  "workspaces": [
    "app",
    "storybook"
  ],
  "private": true,
  "scripts": {
    "start": "yarn --cwd app dev",
    "build": "yarn --cwd app build",
    "storybook": "yarn --cwd storybook storybook",
    "storybook:build": "yarn --cwd storybook build-storybook",
    "test": "yarn --cwd app test",
    "test:watch": "yarn --cwd app test:watch",
    "lint": "yarn --cwd app lint",
    "lint:report": "yarn --cwd app lint:report",
    "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package @/defi/polkadot/interfaces --input ./app/defi/polkadot/interfaces --endpoint ws://127.0.0.1:9988",
    "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package @/defi/polkadot/interfaces --endpoint ws://127.0.0.1:9988 --output ./app/defi/polkadot/interfaces"
  },
  "devDependencies": {
    "husky": ">=6",
    "webpack": "5",
    "eslint-plugin-prettier": "^4.0.0",
    "@babel/core": "^7.17.10",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.17.10"
  },
  "lint-staged": {
    "app/**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "resolutions": {
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "@storybook/react": "6.4.22"
  }
}
